  <body>
    <div class="page">
      <!-- Main Navbar-->
      <% include ../common/header.ejs %>
      <div class="page-content d-flex align-items-stretch"> 
        <!-- Side Navbar -->
        <% include ../common/slider.ejs %>
        <div class="content-inner">
          <!-- Page Header-->
          <% include ../common/crumb.ejs %>
          <section class="tables">   
            <div class="container-fluid">
              <div class="row">
                  <div class="col-lg-12">
                    <div class="card">
                      <div class="card-header d-flex align-items-center">
                        <h3 class="h4">修改</h3>
                      </div>
                      <div class="card-body">
                        <!-- <p>Lorem ipsum dolor sit amet consectetur.</p> -->
                        <!-- <form class="form-horizontal"> -->
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品ID</label>
                            <div class="col-sm-9">
                              <input id="goodsId" type="email" value="<%= page_data.goodsId %>" placeholder="字数限定提示" class="form-control form-control-success">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品图片</label>
                            <div class="col-sm-9">
                              <form id="uploadForm_pro" enctype='multipart/form-data'>
                                  <div class="form-group">
                                      <div class="fileinput fileinput-new" data-provides="fileinput"  id="exampleInputUpload">
                                          <div class="fileinput-new thumbnail" style="width: 100px;height: auto;max-height:100px;">
                                              <img id='img' style="width: 100%;height: auto;max-height: 100px;" src="<%= page_data.img?page_data.img:'/upload/user/noimage.png' %>" alt="" />
                                          </div>
                                          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 250px; max-height: 200px;"></div>
                                          <div>
                                              <span class="btn btn-dark small btn-file">
                                                  <span class="fileinput-new">+</span>
                                                  <span class="fileinput-exists">+</span>
                                                  <input type="file" name="pic1" id="picID" accept="image/gif,image/jpeg,image/x-png" multiple="multiple"/>
                                              </span>
                                              <a href="javascript:;" class="btn btn-dark fileinput-exists" data-dismiss="fileinput">-</a>
                                          </div>
                                      </div>
                                  </div>
                              </form>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品名称</label>
                            <div class="col-sm-9">
                              <input id="title" type="email" value="<%= page_data.title %>" placeholder="字数限定提示" class="form-control form-control-success"><small class="form-text">文章的标题会显示到页面的列表.</small>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品价格</label>
                            <div class="col-sm-9">
                              <input id="price" type="email" value="<%= page_data.price %>" placeholder="字数限定提示" class="form-control form-control-success"><small class="form-text">列如：￥16.00</small>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品销量</label>
                            <div class="col-sm-9">
                              <input id="sale" type="email" value="<%= page_data.sale %>" placeholder="字数限定提示" class="form-control form-control-success">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品库存</label>
                            <div class="col-sm-9">
                              <input id="goodnum" type="email" value="<%= page_data.goodnum %>" placeholder="字数限定提示" class="form-control form-control-success"><small class="form-text">列如：￥16.00</small>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品LOGO</label>
                            <div class="col-sm-9">
                              <input id="logo" type="email" value="<%= page_data.logo %>" placeholder="字数限定提示" class="form-control form-control-success">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品所属国家</label>
                            <div class="col-sm-9">
                              <input id="country" type="email" value="<%= page_data.country %>" placeholder="字数限定提示" class="form-control form-control-success">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品所属国家图片</label>
                            <div class="col-sm-9">
                              <form id="uploadForm_country" enctype='multipart/form-data'>
                                  <div class="form-group">
                                      <div class="fileinput fileinput-new" data-provides="fileinput"  id="exampleInputUpload">
                                          <div class="fileinput-new thumbnail" style="width: 100px;height: auto;max-height:100px;">
                                              <img id='picImg' style="width: 100%;height: auto;max-height: 100px;" src="<%= page_data.country_pic?page_data.country_pic:'/upload/user/noimage.png' %>" alt="" />
                                          </div>
                                          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 250px; max-height: 200px;"></div>
                                          <div>
                                              <span class="btn btn-dark small btn-file">
                                                  <span class="fileinput-new">+</span>
                                                  <span class="fileinput-exists">+</span>
                                                  <input type="file" name="pic1" id="picID" accept="image/gif,image/jpeg,image/x-png" multiple="multiple"/>
                                              </span>
                                              <a href="javascript:;" class="btn btn-dark fileinput-exists" data-dismiss="fileinput">-</a>
                                          </div>
                                      </div>
                                  </div>
                              </form>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品介绍</label>
                            <div class="col-sm-9">
                              <div id="summernote"></div>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">分类ID</label>
                            <div class="col-sm-9">
                              <input id="typeId" type="text" value="<%= page_data.type ? page_data.type[0].typeId : ''%>" placeholder="字数限定提示" class="form-control form-control-success">
                            </div>
                          </div>
                          <div class="form-group row">
                              <label class="col-sm-3 form-control-label">分类商品图</label>
                              <div class="col-sm-9">
                                <form id="uploadForm_fenlei" enctype='multipart/form-data'>
                                    <div class="form-group">
                                        <div class="fileinput fileinput-new" data-provides="fileinput"  id="exampleInputUpload">
                                            <div class="fileinput-new thumbnail" style="width: 100px;height: auto;max-height:100px;">
                                                <img id='picImg' style="width: 100%;height: auto;max-height: 100px;" src="<%= page_data.type?page_data.type[0].typeimg:'/upload/user/noimage.png' %>" alt="" />
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;"></div>
                                            <div>
                                                <span class="btn btn-dark small btn-file">
                                                    <span class="fileinput-new">+</span>
                                                    <span class="fileinput-exists">+</span>
                                                    <input type="file" name="pic1" id="picID" accept="image/gif,image/jpeg,image/x-png"/>
                                                </span>
                                                <a href="javascript:;" class="btn btn-dark fileinput-exists" data-dismiss="fileinput">-</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                              </div>
                          </div>
                          <div class="form-group row">
                              <label class="col-sm-3 form-control-label">分类名称</label>
                              <div class="col-sm-9">
                                <input id="name" type="text" value="<%= page_data.type ? page_data.type[0].name : ''%>" placeholder="字数限定提示" class="form-control form-control-success">
                              </div>
                          </div>
                          <div class="form-group row">
                              <label class="col-sm-3 form-control-label">分类条形码</label>
                              <div class="col-sm-9">
                                <input id="ma" type="text" value="<%= page_data.type ? page_data.type[0].ma : ''%>" placeholder="字数限定提示" class="form-control form-control-success">
                              </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">规格</label>
                            <div class="col-sm-9">
                              <input id="xiang" type="text" value="<%= page_data.type? page_data.type[0].xiang : ''%>" placeholder="字数限定提示" class="form-control form-control-success">
                            </div>
                          </div>
                          <div class="form-group row">
                              <label class="col-sm-3 form-control-label">分类商品价格</label>
                              <div class="col-sm-9">
                                <input id="pri" type="text" value="<%= page_data.type ? page_data.type[0].pri:''%>" placeholder="字数限定提示" class="form-control form-control-success">
                              </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品细节图</label>
                            <div class="col-sm-9">
                                <form id="uploadForm_detail" enctype='multipart/form-data'>
                                  <%if(page_data.goods_pic){%>
                                    <%for(var i=0;i<page_data.goods_pic.length;i++){%>
                                        <div class="form-group" >
                                            <div class="fileinput fileinput-new" data-provides="fileinput"  id="exampleInputUpload">
                                                <div class="fileinput-new thumbnail" style="width: 100px;height: auto;max-height:100px;">
                                                    <img id='picImg' style="width: 100%;height: auto;max-height: 100px;" src="<%= page_data.goods_pic[i]?page_data.goods_pic[i]:'/upload/user/noimage.png' %>" alt="" />
                                                </div>
                                                <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;"></div>
                                                <div>
                                                    <span class="btn btn-dark small btn-file">
                                                        <span class="fileinput-new">+</span>
                                                        <span class="fileinput-exists">+</span>
                                                        <input type="file" name="pic1" id="picID" accept="image/gif,image/jpeg,image/x-png"/>
                                                    </span>
                                                    <a href="javascript:;" class="btn btn-dark fileinput-exists" data-dismiss="fileinput">-</a>
                                                </div>
                                            </div>
                                        </div>
                                    <%}%>
                                    <%}%>
                                </form>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">商品详情图</label>
                            <div class="col-sm-9">
                              <form id="uploadForm_more" enctype='multipart/form-data'>
                                <%if(page_data.detail_pic){%>
                                  <%for(var j=0;j<page_data.detail_pic.length;j++){%>
                                    <div class="form-group">
                                        <div class="fileinput fileinput-new" data-provides="fileinput"  id="exampleInputUpload">
                                            <div class="fileinput-new thumbnail" style="width: 100px;height: auto;max-height:100px;">
                                                <img id='country_pic' style="width: 100%;height: auto;max-height: 100px;" src="<%= page_data.detail_pic[j]?page_data.detail_pic[j]:'/upload/user/noimage.png' %>" alt="" />
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;"></div>
                                            <div>
                                                <span class="btn btn-dark small btn-file">
                                                    <span class="fileinput-new">+</span>
                                                    <span class="fileinput-exists">+</span>
                                                    <input type="file" name="pic1" id="picID" accept="image/gif,image/jpeg,image/x-png"/>
                                                </span>
                                                <a href="javascript:;" class="btn btn-dark fileinput-exists" data-dismiss="fileinput">-</a>
                                            </div>
                                        </div>
                                    </div>
                                  <%}%>
                                  <%}%>
                              </form>
                            </div>
                          </div>
                          <div class="form-group row">       
                            <div class="col-sm-10 offset-sm-3">
                              <input type="button" value="提交" class="btn btn-success" id="commit">
                              <script>
                                $(function(){
                                  $('#summernote').summernote({
                                    placeholder: 'https://summernote.org',
                                    tabsize: 2,
                                    minHeight: 300,
                                    lang: 'zh-CN'
                                  });
                                  var jieshao = '<%- page_data.jieshao %>';
                                  $('#summernote').summernote('code', jieshao)
                                  $('#commit').click(function(){
                                    var jieshao = $('#summernote').summernote('code')
                                    var goodsId=$("#goodsId").val();
                                    var title=$("#title").val();
                                    var price=$("#price").val();
                                    var sale=$("#sale").val();
                                    var goodnum=$("#goodnum").val();
                                    var logo=$("#logo").val();
                                    var country=$("#country").val();
                                    var typeId=$("#typeId").val();
                                    var name=$("#name").val();
                                    var ma=$("#ma").val();
                                    var xiang=$("#xiang").val();
                                    var pri=$("#pri").val();

                                    var form_data = new FormData();
                                    form_data.append('_id',"<%=_id%>");
                                    form_data.append('jieshao',jieshao);
                                    form_data.append('goodsId',goodsId);
                                    form_data.append('title',title);
                                    form_data.append('price',price);
                                    form_data.append('sale',sale);
                                    form_data.append('goodnum',goodnum);
                                    form_data.append('logo',logo);
                                    form_data.append('country',country);
                                    form_data.append('typeId',typeId);
                                    form_data.append('name',name);
                                    form_data.append('ma',ma);
                                    form_data.append('xiang',xiang);
                                    form_data.append('pri',pri);
                                    form_data.append('dataName',"<%=dataName%>");
                                    form_data.append('start',"<%=start%>");
                                    form_data.append('q',"<%=q%>");
                                    form_data.append('num',"<%=num%>");
                                    form_data.append('rule',"<%=rule%>");
                                    form_data.append('pro',$('#uploadForm_pro #picID')[0].files[0]);
                                    form_data.append('country_pic',$('#uploadForm_country #picID')[0].files[0]);
                                    form_data.append('fenlei',$('#uploadForm_fenlei #picID')[0].files[0]);
                                    for(var i = 0; i < $('#uploadForm_detail #picID')[0].files.length;i++){
                                      form_data.append('detail',$('#uploadForm_detail #picID')[0].files[i]);
                                    }
                                    for(var j=0;j<$('#uploadForm_more #picID')[0].files.length;j++){
                                      form_data.append('more',$('#uploadForm_more #picID')[0].files[j]);
                                    }

                                    $.ajax({
                                      url: '/admin/banner/check/submit',
                                      type: 'POST',
                                      data:form_data,
                                      contentType: false,
                                      processData: false,
                                      success: function (url) {
                                        window.location.href=url;
                                      },
                                      error: function (data) {
                                          console.log(data.status);
                                      }
                                    });
                                  })
                                })
                              </script>
                            </div>
                          </div>
                        <!-- </form> -->
                      </div>
                    </div>
                  </div>
              </div>
            </div>
          </section>
          <!-- Page Footer-->
          <% include ../common/footer.ejs %>
        </div>
      </div>
    </div>
    <!-- JavaScript files-->
    <script src="/admin/vendor/popper.js/umd/popper.min.js"> </script>
    <script src="/admin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/admin/vendor/jquery.cookie/jquery.cookie.js"> </script>
    <script src="/admin/vendor/chart.js/Chart.min.js"></script>
    <script src="/admin/vendor/jquery-validation/jquery.validate.min.js"></script>
    <!-- Main File-->
    <script src="/admin/js/front.js"></script>
  </body>
</html>